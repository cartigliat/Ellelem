<Window x:Class="ollamidesk.SideMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Model" Height="450" Width="300"
        Style="{StaticResource {x:Type Window}}"
        ResizeMode="NoResize"> <!-- Ensure window style is applied -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/> <!-- Explicitly star -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select Model"
                   FontSize="{StaticResource LargeFontSize}" <!-- Use themed large font -->
                   FontWeight="Bold"
                   Margin="10"
                   Style="{StaticResource {x:Type TextBlock}}"/> <!-- Ensure themed -->

        <ListBox x:Name="ModelListBox"
                 Grid.Row="1"
                 Margin="10"
                 SelectionChanged="ModelListBox_SelectionChanged"
                 Style="{StaticResource {x:Type ListBox}}"/> <!-- Ensure themed -->

        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">
            <!-- RagButton removed -->
            <Button Content="OK"
                    Click="OkButton_Click"
                    Margin="0,0,10,0"
                    Padding="15,5"
                    IsDefault="True"
                    Style="{StaticResource {x:Type Button}}"/> <!-- Ensure themed -->

            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    Padding="15,5"
                    IsCancel="True"
                    Style="{StaticResource {x:Type Button}}"/> <!-- Ensure themed -->
        </StackPanel>
    </Grid>
</Window>