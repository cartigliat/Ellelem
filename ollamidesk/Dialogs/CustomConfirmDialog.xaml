<Window x:Class="ollamidesk.Dialogs.CustomConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource {x:Type Window}}"
        Title="{Binding DialogTitle, RelativeSource={RelativeSource Self}}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" MinWidth="300" MaxWidth="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Message -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageTextBlock" Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,20"
                   Text="{Binding DialogMessage, RelativeSource={RelativeSource Self}}"
                   Style="{StaticResource {x:Type TextBlock}}" FontSize="{StaticResource BaseFontSize}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="YesButton" Content="Yes" Click="YesButton_Click" IsDefault="True"
                    Style="{StaticResource {x:Type Button}}" MinWidth="80" Margin="0,0,10,0"/>
            <Button x:Name="NoButton" Content="No" Click="NoButton_Click" IsCancel="True"
                    Style="{StaticResource {x:Type Button}}" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>
